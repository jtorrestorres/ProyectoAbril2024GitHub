@model List<ML.Materia>

@{
    ViewBag.Title = "Materias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Materias</h2>

@if (Model != null && Model.Any())
{
    <p>
        <a href="@Url.Action("Form", "Materia")" class="btn btn-primary">Agregar nueva Materia</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Costo</th>
                <th>Créditos</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item?.IdMateria.ToString() ?? "N/A")</td>
                    <td>@(item?.Nombre ?? "N/A")</td>
                    <td>@(item?.Descripcion ?? "N/A")</td>
                    <td>@(item?.Costo.ToString("C") ?? "N/A")</td>
                    <td>@(item?.Creditos.ToString() ?? "N/A")</td>
                    <td>
                        <!-- Cambiado para redirigir al formulario de edición -->
                        <a href="@Url.Action("Form", "Materia", new { id = item?.IdMateria })" class="btn btn-warning">Editar</a>
                        <a href="@Url.Action("DeleteMateria", "Materia", new { id = item?.IdMateria })" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron materias.</p>
}